{
  "extends": "@opendaw/typescript-config/tsconfig.build.json",
  "//": "Deployment scripts disabled",
  "compilerOptions": {
    // Target a modern Node.js runtime.
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // Enable interoperability with CommonJS modules.
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // We only perform type checking; no output files are emitted.
    "noEmit": true,
    "strict": true,
    // Rely on declaration files provided by dependencies without rechecking.
    "skipLibCheck": true
  },
  "files": [
    "run.ts"
  ]
}
