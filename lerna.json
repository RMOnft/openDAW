{
  "//": "Lerna manages versioning and publishing for workspace packages",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version//": "Version is managed by openDAW versioning policy; see packages/docs/docs-dev/build-and-run/versioning.md",
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "//": "Settings for lerna subcommands",
    "publish": {
      "conventionalCommits": true, // generate changelog from commit messages
      "registry": "https://registry.npmjs.org/",
      "access": "public" // publish as public packages
    }
  },
  "packages": ["packages/**"] // glob for workspace packages
}
