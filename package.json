{
  "name": "opendaw",
  "version": "0.0.0",
  "private": true,
  "license": "LGPL-3.0-or-later",
  "scripts": {
    "cert": "bash ./scripts/cert.sh",
    "clean": "bash ./scripts/clean.sh",
    "install:deps": "node ./scripts/install_dependencies.js",
    "build": "turbo build",
    "dev:studio": "turbo run dev --filter=@opendaw/app-studio",
    "dev:headless": "turbo run dev --filter=@opendaw/app-headless",
    "test": "turbo run test --concurrency=1",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish-sdk": "lerna publish",
    "docs:dev": "npm --workspace packages/docs run start",
    "docs:build": "npm --workspace packages/docs run build"
  },
  "devDependencies": {
    "@types/ssh2-sftp-client": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "lerna": "^8.2.3",
    "prettier": "^3.6.2",
    "ssh2-sftp-client": "^12.0.1",
    "ts-node": "^10.1.0",
    "turbo": "^2.5.5",
    "typedoc": "^0.28.11",
    "typescript": "^5.9.2",
    "vitest": "^3.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andremichelle/opendaw"
  },
  "engines": {
    "node": ">=23"
  },
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "packages/**/*"
  ]
}